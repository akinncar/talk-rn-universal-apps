{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "checkJs": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": ["src/**/*", "src/**/*.mdx"],
  "exclude": ["node_modules", "dist"]
} 